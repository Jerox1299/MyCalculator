<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="CalculatorButton.Operation">
        <item name="android:backgroundTint">#FF9800</item>
    </style>

    <style name="CalculatorButton.Equal">
        <item name="android:backgroundTint">#4CAF50</item>
    </style>

    <style name="CalculatorButton.Clear">
        <item name="android:backgroundTint">#F44336</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>